<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#FFFAF0"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/light_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="center|right"
            android:text="原密码"/>


        <letus179.com.biubiu.edit.ClearEditText
            android:id="@+id/my_account_pwd_old"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入原密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColorHint="@color/light_gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/my_account_pwd_old_show_hide"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/pwd_hide"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/light_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="center|right"
            android:text="新密码"/>


        <letus179.com.biubiu.edit.ClearEditText
            android:id="@+id/my_account_pwd_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入新密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColorHint="@color/light_gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/my_account_pwd_new_show_hide"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/pwd_hide"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/light_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="center|right"
            android:text="确认密码"/>


        <letus179.com.biubiu.edit.ClearEditText
            android:id="@+id/my_account_pwd_new_again"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColorHint="@color/light_gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/my_account_pwd_new_again_show_hide"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/pwd_hide"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/light_gray"/>


    <Button
        android:id="@+id/my_account_pwd_send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/tan"
        android:enabled="false"
        android:text="保存"/>
</LinearLayout>